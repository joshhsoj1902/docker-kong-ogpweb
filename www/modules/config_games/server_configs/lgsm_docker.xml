<game_config>
  <game_key>lgsm_docker_linux32</game_key>
  <game_name>1 LGSM Docker</game_name>
  <server_exec_name>foo.sh</server_exec_name>
  <console_log>ServerLog.txt</console_log>
  <max_user_amount>8</max_user_amount>
  <mods>
    <mod key="none">
      <name>none</name>
    </mod>
  </mods>
  <replace_texts>
    <text key="port">
      <default>(port:\s*)(.*)</default>
      <var>port:</var>
      <filepath>docker-config.yml</filepath>
      <options>s</options>
    </text>
    <text key="image_namespace">
      <default>(namespace:\s*)(.*)</default>
      <var>namespace: joshhsoj1902</var>
      <filepath>docker-config.yml</filepath>
      <options>s</options>
    </text>
    <text key="image_name">
      <default>(image:\s*)(.*)</default>
      <var>image: linuxgsm-docker</var>
      <filepath>docker-config.yml</filepath>
      <options>s</options>
    </text>
    <text key="data_vol_1">
      <default>(data-vol-1:\s*)(.*)</default>
      <var>dataVol1: /</var>
      <filepath>docker-config.yml</filepath>
      <options>s</options>
    </text>
    <text key="max_players">
      <default>(maxplayers:\s*)(.*)</default>
      <var>maxplayers:</var>
      <filepath>docker-config.yml</filepath>
      <options>s</options>
    </text>
  </replace_texts>
  <custom_fields>

    <field key="lgsm_gameservername" type="select">
      <option value="gmodserver">Gmod</option>
      <option value="l4d2server">L4D2</option>
      <option value="l4dserver">L4D</option>
      <default>property</default>
      <default_value>gmodserver</default_value>
      <var>      - LGSM_GAMESERVERNAME=</var>
      <filepath>docker-environment.yml</filepath>
      <desc>Which game type to start</desc>
    </field>
    <field key="lgsm_updateinstallskip" type="select">
      <option value="UPDATE">Update on startup</option>
      <option value="INSTALL">Install game server</option>
      <option value="SKIP">Don't install or update</option>
      <default>property</default>
      <default_value>UPDATE</default_value>
      <var>      - LGSM_UPDATEINSTALLSKIP=</var>
      <filepath>docker-environment.yml</filepath>
    </field>
    <!-- <field key="LGSM_GAMEMODE" type="text">
      <default>property</default>
      <default_value>sandbox</default_value>
      <var>      - LGSM_GAMEMODE=</var>
      <filepath>docker-environment.yml</filepath>
      <options></options>
      <desc>s</desc>
    </field>
    <field key="LGSM_DEFAULTMAP" type="text">
      <default>property</default>
      <default_value>gm_construct</default_value>
      <var>      - LGSM_DEFAULTMAP=</var>
      <filepath>docker-environment.yml</filepath>
      <options></options>
    </field> -->
    <field key="image_version" type="text">
      <default>property</default>
      <default_value>latest</default_value>
      <var>version:</var>
      <filepath>docker-config.yml</filepath>
      <options>s</options>
    </field>
  </custom_fields>
</game_config>
