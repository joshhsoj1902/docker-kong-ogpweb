<game_config>
  <game_key>gmod_docker_linux32</game_key>
  <installer>steamcmd</installer>  
  <game_name>Gmod (Docker)</game_name>
  <server_exec_name>foo.sh</server_exec_name>
  <console_log>ServerLog.txt</console_log>
  <max_user_amount>8</max_user_amount>
  <mods>
    {{(datasource "snippets").mods_none | base64.Decode}}
  </mods>
  <replace_texts>
    {{(datasource "snippets").replace_texts_port | base64.Decode}}
    <text key="image_namespace">
      <default>(namespace:\s*)(.*)</default>
      <var>namespace: gcr.io/dustless-188617</var>
      <filepath>docker-config.yml</filepath>
      <options>s</options>
    </text>
    <text key="image_name">
      <default>(image:\s*)(.*)</default>
      <var>image: github-joshhsoj1902-gmod-docker</var>
      <filepath>docker-config.yml</filepath>
      <options>s</options>
    </text>
    {{(datasource "snippets").replace_texts_data_vol_1_root | base64.Decode}}
    {{(datasource "snippets").replace_texts_max_players | base64.Decode}}
  </replace_texts>
  <custom_fields>
    {{(datasource "snippets").custom_fields_image_version | base64.Decode}}
    <field key="LGSM_GAMEMODE" type="text">
      <default>property</default>
      <default_value>sandbox</default_value>
      <var>      - LGSM_GAMEMODE=</var>
      <filepath>docker-environment.yml</filepath>
      <options></options>
      <desc>Game mode</desc>
    </field>
    <field key="LGSM_DEFAULTMAP" type="text">
      <default>property</default>
      <default_value>gm_construct</default_value>
      <var>      - LGSM_DEFAULTMAP=</var>
      <filepath>docker-environment.yml</filepath>
      <options></options>
      <desc>Which map to start on</desc>
    </field>
    <field key="LGSM_WORKSHOPCOLLECTIONID" type="text">
      <default>property</default>
      <default_value></default_value>
      <var>      - LGSM_WORKSHOPCOLLECTIONID=</var>
      <filepath>docker-environment.yml</filepath>
      <options></options>
      <desc></desc>
    </field>
    <field key="LGSM_WORKSHOPAUTH" type="text">
      <default>property</default>
      <default_value></default_value>
      <var>      - LGSM_WORKSHOPAUTH=</var>
      <filepath>docker-environment.yml</filepath>
      <options></options>
      <desc></desc>
    </field>

















    <field key="tagValueByName" type="text">
      <default>property</default>
      <default_value>40</default_value>
      <var>tagValueByName</var>
      <filepath>docker-test.yml</filepath>
      <options>tagValueByName</options>
      <desc>How many minutes should 24 hours take</desc>
    </field>
    <field key="tags" type="text">
      <default>property</default>
      <default_value>40</default_value>
      <var>tags</var>
      <filepath>docker-test.yml</filepath>
      <options>tags</options>
      <desc>tags</desc>
    </field>
    <field key="q" type="text">
      <default>property</default>
      <default_value>40</default_value>
      <var>q</var>
      <filepath>docker-test.yml</filepath>
      <options>q</options>
      <desc>q</desc>
    </field>
    <field key="s" type="text">
      <default>property</default>
      <default_value>40</default_value>
      <var>s</var>
      <filepath>docker-test.yml</filepath>
      <options>s</options>
      <desc>s</desc>
    </field>
    <field key="sq" type="text">
      <default>property</default>
      <default_value>40</default_value>
      <var>sq</var>
      <filepath>docker-test.yml</filepath>
      <options>sq</options>
      <desc>sq</desc>
    </field>
    <field key="sc" type="text">
      <default>property</default>
      <default_value>40</default_value>
      <var>sc</var>
      <filepath>docker-test.yml</filepath>
      <options>sc</options>
      <desc>sc</desc>
    </field>
    <field key="sqc" type="text">
      <default>property</default>
      <default_value>40</default_value>
      <var>sqc</var>
      <filepath>docker-test.yml</filepath>
      <options>sqc</options>
      <desc>sqc</desc>
    </field>

  </custom_fields>
</game_config>
